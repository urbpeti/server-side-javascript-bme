<%- include('header', { nav : nav }) %>
<div class="container">
    <h1 class="display-4">
        Új kutya hozzáadása
    </h1>
    <form action="/dog/new" method="POST">
        <div class="form-group">
            <label for="nev">Név</label>
            <input type="text" class="form-control" id="nev" name="name">
        </div>
        <div class="form-group">
            <label for="fajta">Fajta</label>
            <input type="text" class="form-control" id="fajta" name="species">
        </div>
        <div class="form-group">
            <label for="kor">Kor</label>
            <input type="text" class="form-control" id="kor" name="age">
        </div>
        <div class="form-group">
            <label for="szin">Szín</label>
            <input type="text" class="form-control" id="szin" name="color">
        </div>
        <div class="form-group">
            <label for="menhely">Menhely</label>
            <select class="form-control" name="pound_id">
                <% for(pound of pounds) { %>
                <option value=<%=pound.id %>>
                    <%= pound.location %>
                </option>
                <% } %>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Mentés</button>
    </form>
</div>
<%- include('footer') %>