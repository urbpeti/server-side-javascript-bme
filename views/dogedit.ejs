<%- include('header', { nav : nav }) %>
<div class="container">
    <h1 class="display-4">
        Kutya módosítása
    </h1>
    <form action="/dog/edit/<%= dog.id %>" method="POST">
        <div class="form-group">
            <label for="nev">Név</label>
            <input type="text" class="form-control" id="nev" value="<%= dog.name %>" name="name">
        </div>
        <div class="form-group">
            <label for="fajta">Fajta</label>
            <input type="text" class="form-control" id="fajta" value="<%= dog.species %>" name="species">
        </div>
        <div class="form-group">
            <label for="kor">Kor</label>
            <input type="text" class="form-control" id="kor" value="<%= dog.age %>" name="age">
        </div>
        <div class="form-group">
            <label for="szin">Szín</label>
            <input type="text" class="form-control" id="szin" value="<%= dog.color %>" name="color">
        </div>
        <div class="form-group">
            <label for="menhely">Menhely</label>
            <select class="form-control" name="pound_id">
            <% for(pound of pounds) { %>
                <% if(pound.id == dog.pound.id) { %>
                <option value=<%=pound.id %> selected>
                    <%= pound.location %>
                </option>
                <% } else { %>
                <option value=<%=pound.id %>>
                    <%= pound.location %>
                </option>
                <% } %>
            <% } %>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Mentés</button>
    </form>
</div>
<%- include('footer') %>